@model FoodTruck3.Models.ViewModel.Account.ForgotPasswordVM

@{
    ViewBag.Title = "Forgot Password";
}

<h4 class="text-center">Reset Password</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <p class="text-center">Please insert your email to reset password</p>
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-3">Email</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Send Email" class="btn btn-default" />
        </div>
    </div>
</div>
}

@if (TempData["Success"] != null)
{
    <div class="btn btn-success sm" align="center">
        @TempData["Success"]
    </div>
}

<div class="backtopages">
    @Html.ActionLink("Sign In", "SignIn")
</div>
